<div layout="column">
    <section layout="row" flex>
        <md-content flex>
            <h3 class="block-title2">Informations générales</h3>
            <div layout="row" class="bp-10">
                <div flex="25">
                    <span class="fa fa-users fa-2x middle"></span>
                    <span class="middle">Total : {{countAll.count}}</span>
                </div>
                <div flex="25">
                    <span class="fa fa-graduation-cap fa-2x middle"></span>
                    <span class="middle">Étudiants : {{countStudent.count}}</span>
                </div>
                <div flex="25">
                    <span class="fa-stack fa-lg">
                      <i class="fa fa-user fa-stack-1x"></i>
                      <i class="fa fa-circle-o fa-stack-2x"></i>
                    </span>
                    <span>Professeurs : {{countTeacher.count}}</span>
                </div>
                <div flex="25">
                    <span class="fa-stack fa-lg">
                      <i class="fa fa-user fa-stack-1x"></i>
                      <i class="fa fa-check-circle-o fa-stack-2x text-success"></i>
                    </span>
                    <span>Professeurs validés : {{countTeacherValidated.count}}</span>
                </div>
            </div>
            <h3 class="block-title2">Liste des utilisateurs</h3>
            <alex-table id="userDatatable" model="datatable" columns="columns"></alex-table>
        </md-content>
        <md-sidenav class="md-sidenav-right md-whiteframe-z2" md-component-id="right">
            <md-toolbar class="md-theme-light">
                <h1 class="md-toolbar-tools">{{selected.username}}</h1>
            </md-toolbar>
            <md-content layout-padding>
                <div layout="column">
                    <div flex class="center">
                        <md-button id="btnRemoveUser" ng-click="removeCurrent($event)" class="md-raised md-warn w-50">
                            <md-icon md-font-icon="fa-trash" class="fa f-20"></md-icon>
                            Supprimer
                        </md-button>
                    </div>
                    <div flex class="center">
                        <md-button ng-click="closeNavbar()" class="md-raised w-50">
                            Annuler
                        </md-button>
                    </div>
                </div>
            </md-content>
        </md-sidenav>
    </section>
</div>