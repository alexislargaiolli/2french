<div id="blackBar" class="small">
    <div class="container">
        <h1>{{'register.title' | translate}}</h1>
    </div>
</div>
<div id="registerPanel" class="container white-block">
    <div class="row">
        <div id="left" class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <div id="register-vignet" class="center">
                <img src="images/home/teach.png" ng-if="registerType == 1"/>
                <img src="images/home/learn.png" ng-if="registerType == 2"/>
            </div>

            <div ng-if="registerType == 1">
                <h2 class="center">{{'register.teach' | translate}}</h2>
                <p>{{'register.teacher.text.1'|translate}}</p>
                <p>{{'register.teacher.text.2'|translate}}</p>
                <p>{{'register.teacher.text.3'|translate}}</p>
            </div>
            <div ng-if="registerType == 2">
                <h2 class="center">{{'register.learn' | translate}}</h2>
                <p>{{'register.student.text.1'|translate}}</p>
            </div>
            <div class="center">
                <a ui-sref="learn" ng-if="registerType == 2">{{'register.moreinfo'|translate}}</a>
                <a ui-sref="teach" ng-if="registerType == 1">{{'register.moreinfo'|translate}}</a>
            </div>
        </div>
        <div id="right" class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <label class="btn-register blue-btn center-block">
                        <input id="registerStudentSwitch" type="radio" ng-model="registerType" value="2"/>{{'register.student' | translate}}
                    </label>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <label class="btn-register blue-btn center-block">
                        <input id="registerTeacherSwitch" type="radio" ng-model="registerType" value="1"/>{{'register.teacher' | translate}}
                    </label>
                </div>
            </div>
            <form id="formRegister" name="formRegister" role="form" class="center-block">
                <div class="form-group has-feedback" class-valid="formRegister.pseudo">
                    <input id="registerPseudo" ng-model="user.firstname" type="text" name="pseudo" class="form-control"
                           placeholder="{{'register.pseudo'|translate}}" ng-required="true">
                    <span class="error" ng-show="formRegister.pseudo.$error.required"></span>

                    <icon-validation elt="formRegister.pseudo"></icon-validation>
                </div>

                <div class="form-group has-feedback" class-valid="formRegister.city">
                    <input id="registerCity" type="text" name="city" g-places-autocomplete ng-model="user.city" force-selection="true"
                           class="form-control" ng-required="true" placeholder="{{'register.city' | translate}}"/>
                    <span class="error" ng-show="formRegister.city.$error.required"></span>

                    <icon-validation elt="formRegister.city"></icon-validation>
                </div>

                <div class="form-group has-feedback" class-valid="formRegister.email">
                    <input id="registerEmail" ng-model="user.email" type="email" name="email" class="form-control"
                           placeholder="{{'register.mail' | translate}}" ng-required="true">
                    <span class="error" ng-show="formRegister.email.$error.email"></span>

                    <icon-validation elt="formRegister.email"></icon-validation>
                </div>
                <div class="form-group has-feedback" class-valid="formRegister.conf">
                    <input id="registerEmailConfirmation" ng-model="user.emailConfirmation" type="text" name="conf" class="form-control"
                           placeholder="{{'register.mail.confirmation'|translate}}" match="user.email"
                           ng-required="true">
                    <span class="error" ng-show="formRegister.conf.$error.email"></span>

                    <icon-validation elt="formRegister.conf"></icon-validation>
                </div>
                <div class="alert alert-danger" role="alert"
                     ng-show="formRegister.conf.$error.mismatch && !formRegister.conf.$pristine">
                    {{'register.mail.confirmation.error' | translate}}
                </div>
                <div class="form-group has-feedback" class-valid="formRegister.password">
                    <input id="registerPassword" ng-model="user.password" type="password" name="password" class="form-control"
                           placeholder="{{'register.password'|translate}}" ng-required="true" aria-invalid="true">
                    <span class="error" ng-show="formRegister.password.$error.required"></span>
                    <icon-validation elt="formRegister.password"></icon-validation>
                </div>
                <div class="alert alert-danger" role="alert" ng-show="message">{{message}}</div>
                <button id="btnSubmitRegister" ng-click="submit()" type="submit" class="btn btn-default green-btn center-block p-20 f-16">{{'register.button'|
                    translate}}
                </button>
            </form>
        </div>
    </div>
</div>